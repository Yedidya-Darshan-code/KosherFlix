<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.NetflixApp4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background & surface colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <!-- Improved SearchView style -->
    <style name="NetflixSearchViewStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>

        <!-- Cursor and icon colors -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- Remove default backgrounds -->
        <item name="android:background">@null</item>

        <!-- Optional: remove default cursor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:itemBackground">@color/background</item>
    </style>
</resources>